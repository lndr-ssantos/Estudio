@page
@model Estudio.Pages.Bandas.CadBandaModel

@{ ViewData["Title"] = "Cadastrar Banda";
}

<h2>Cadastrar</h2>

<h4>Banda</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Banda.NomeBanda" class="control-label">Nome da Banda</label>
				<input asp-for="Banda.NomeBanda" class="form-control" />
				<span asp-validation-for="Banda.NomeBanda" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Banda.QtdIntegrantes" class="control-label">Quantidade de Integrantes</label>
				<input asp-for="Banda.QtdIntegrantes" class="form-control" />
				<span asp-validation-for="Banda.QtdIntegrantes" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Banda.NomeResponsavel" class="control-label">Nome do Responsável</label>
				<input asp-for="Banda.NomeResponsavel" class="form-control" />
				<span asp-validation-for="Banda.NomeResponsavel" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Banda.TelResponsavel" class="control-label">Telefone do Responsável</label>
				<input asp-for="Banda.TelResponsavel" class="form-control" />
				<span asp-validation-for="Banda.TelResponsavel" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Banda.EmailResponsavel" class="control-label">Email do Responsável</label>
				<input asp-for="Banda.EmailResponsavel" class="form-control" />
				<span asp-validation-for="Banda.EmailResponsavel" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Banda.CPFResponsavel" class="control-label">CPF do Responsável</label>
				<input asp-for="Banda.CPFResponsavel" class="form-control" />
				<span asp-validation-for="Banda.CPFResponsavel" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Cadastrar" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
