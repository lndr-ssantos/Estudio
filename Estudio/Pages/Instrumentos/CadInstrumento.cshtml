@page
@model Estudio.Pages.Instrumentos.CadInstrumentoModel
@{
    ViewData["Title"] = "Cadastrar Instrumento";
}

<h2>Cadastrar</h2>
<h4>Instrumento</h4>
<hr />

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Instrumento.Marca" class="control-label"></label>
				<input asp-for="Instrumento.Marca" class="form-control"/>
				<span asp-validation-for="Instrumento.Marca" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Instrumento.Modelo" class="control-label"></label>
				<input asp-for="Instrumento.Modelo" class="form-control"/>
				<span asp-validation-for="Instrumento.Modelo" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Instrumento.Tipo" class="control-label"></label>
				<select asp-for="Instrumento.Tipo" class="form-control">
					<option value="0">Selecione uma sala</option>
					<option value="GUITARRA">Guitarra</option>
					<option value="BAIXO">Baixo</option>
					<option value="TECLADO">Teclado</option>
				</select>
				<span asp-validation-for="Instrumento.Tipo" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Cadastrar" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>
